    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">
    <com.bigkoo.convenientbanner.ConvenientBanner
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/iamges"
        android:visibility="visible"
       />


    <LinearLayout
