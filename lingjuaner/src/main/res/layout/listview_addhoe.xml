        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="特价秒杀"
            android:drawableTop="@mipmap/btn_99_free_data_img_select"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="每日TOP100"
            android:drawableTop="@mipmap/btn_famous_data_img"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="必拍"
            android:drawableTop="@mipmap/btn_jhs_data_img"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="#000000"
        android:visibility="gone"
        android:background="@mipmap/tubgs"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:layout_margin="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="随时更新"
            android:padding="7dp"
            android:textSize="9sp"
            android:drawableLeft="@mipmap/icon_start_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="无门槛优惠券"
            android:padding="7dp"
            android:textSize="9sp"
            android:drawableLeft="@mipmap/icon_start_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="全场包邮"
