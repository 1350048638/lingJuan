<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--
         与顺序有关。最外层一定要放在最前面。最里层放在里面，
         不然会被遮挡。也与item中设置的值大小有关系
-->
    <!-- 最外层 -->
    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="@dimen/y2" />
        </shape>
    </item>

    <!-- 中间层 -->
    <item
        android:bottom="5px"
        android:left="5px"
        android:right="5px"
        android:top="5px">

        <shape>
            <solid android:color="#F56A39" />
            <corners android:radius="5.0dip" />

        </shape>
    </item>

    <!-- 最里层 -->
    <item
        android:bottom="23dp"
        android:left="21dp"
        android:right="23dp"
        android:top="23dp">
        <shape>
            <solid android:color="#F56A39" />
            <corners android:radius="11.0dip" />
        </shape>
    </item>

</layer-list>